<!-- Validation failure messages -->
<% if @airline.errors.any? %>
  <% @airline.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Airline #<%= @airline.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_airline/<%= @airline.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for airline_name -->
      <div class="form-group">
        <label for="airline_name" class="control-label">
          Airline name
        </label>

        <input type="text" id="airline_name" name="airline_name" placeholder="Airline name" class="form-control" value="<%= @airline.airline_name %>">
      </div>

      <button class="btn btn-warning">
        Update Airline
      </button>
      or
      <a href="/airlines/<%= @airline.id %>">Cancel</a>
    </form>
  </div>
</div>
