<div class="page-header">
  <h1>
    Airlines
    <a href="/airlines/new" class="btn btn-lg btn-success">New Airline</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Airline name</th>
        <th>Actions</th>
      </tr>

      <% @airlines.each do |airline| %>
      <tr>
        <td><%= airline.airline_name %></td>
        <td>
          <a href="/airlines/<%= airline.id %>" class="btn btn-primary">Show</a>
          <a href="/airlines/<%= airline.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_airline/<%= airline.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @airlines, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
