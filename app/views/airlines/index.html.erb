<div class="page-header">
  <h1>
    Airlines
  </h1>

  <h4>Don't see an airline you want?
    <a href="/airlines/new" class="btn btn-lg btn-success">Add a New Airline </a>
    </h4>
</div>

<div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :id => "airlines_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :airline_name_cont, "Airline Name contains:" %>
    <%= f.text_field :airline_name_cont, :class => "form-control", :placeholder => "Airline Name contains" %>
  </div>


      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Airline Name</th>
        <th>Remove Airline</th>
      </tr>

      <% @airlines.each do |airline| %>
      <tr>
        <td><%= airline.airline_name %></td>
        <td>
            <a href="/delete_airline/<%= airline.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>

      </tr>
      <% end %>
    </table>
    <%= paginate @airlines, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
