<div class="page-header">
  <h1>
    Flights
  </h1>
  <h4>Don't See a Flight You're Looking For? <a href="/flights/new" class="btn btn-lg btn-success"> Add a New Flight</a></h4>
</div>

<div class="row">
  <div class="col-md-10">
    <table class="table table-striped table-hover">
      <tr>
        <th>Airline Name</th>
        <th>Route</th>
        <th>Review</th>
        <th>Remove Flight</th>
      </tr>

        <% @flights.each do |flight| %>
        <tr>
          <td>
            <% if flight.airline.present? %>
              <a href="/airlines/<%= flight.airline.id %>">
                <%= flight.airline.airline_name %>
              </a>
            <% end %>
          </td>

          <td>
            <% if flight.route.route_name.present? %>
              <a href="/routes/<%= flight.route.id %>">
                <%= flight.route.route_name %>
              </a>
            <% end %>
          </td>
        <td> <%= flight.flight_name %> </td>


        <td>
          <a href="/delete_flight/<%= flight.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @flights, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
