<div class="page-header">
  <h1>
    Flights
    <a href="/flights/new" class="btn btn-lg btn-success">New Flight</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Departure airport</th>
        <th>Destination airport</th>
        <th>Flight name</th>
        <th>Airline</th>
        <th>Route</th>
        <th>Actions</th>
      </tr>

      <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.departure_airport %></td>
        <td><%= flight.destination_airport %></td>
        <td><%= flight.flight_name %></td>
        <td>
          <% if flight.airline.present? %>
            <a href="/airlines/<%= flight.airline.id %>">
              <%= flight.airline.airline_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if flight.route.present? %>
            <a href="/routes/<%= flight.route.id %>">
              <%= flight.route.departure_airport %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/flights/<%= flight.id %>" class="btn btn-primary">Show</a>
          <a href="/flights/<%= flight.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_flight/<%= flight.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @flights, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
